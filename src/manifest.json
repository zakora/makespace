{
    "manifest_version": 2,
    "name": "makespace",
    "version": "1.1",
    "description": "Make space by removing all fixed elements on a page.",

    "background": {
        "scripts": ["background.js"]
    },

    "page_action": {
        "default_icon": "icons/makespace_off.svg",
        "default_title": "Make space",
        "show_matches": [
            "http://*/*",
            "https://*/*"
        ]
    },

    "permissions": [
        "activeTab"
    ],

    "applications": {
        "gecko": {
            "id": "makepace@zakora.home",
            "strict_min_version": "58.0"
        }
    }
}
